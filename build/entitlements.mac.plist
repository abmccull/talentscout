<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- V8 JIT compilation â€” required for all Electron / Chromium apps. -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    <!-- Chromium renderer requires writable + executable memory pages. -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    <!-- steamworks.js native module loads via DYLD_INSERT_LIBRARIES. -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
    <!-- Outbound network: Supabase cloud saves, leaderboard API. -->
    <key>com.apple.security.network.client</key>
    <true/>
    <!-- Save / load file dialogs initiated by the user. -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
</dict>
</plist>
